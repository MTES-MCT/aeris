{% extends "common/base_inside.html.twig" %}
{% block title %}
Aeris - List des incinérateurs
{% endblock %}

{% block body %}
  <section class="section">
    <div class="container">
      <h2 class="title is-2">Incinérateurs</h2>

      <table class="table">
          <thead>
            <tr>
              <th>Incinérateur</th>
              <th>Tableau de bord</th>
              <th>Historique des déclarations</th>
            </tr>
          </thead>
          <tbody>
            {% for incinerateur in incinerateurs %}
            <tr>
              <th><a href="{{ path('route_dashboard_incinerateur', {incinerateurId: incinerateur.id }) }}">{{ incinerateur.name }}</a></th>
              <td>
                <a class="button" href="{{ path('route_dashboard_incinerateur', {incinerateurId: incinerateur.id }) }}">Tableau de bord</a>
              </td>

              <td>
                <a class="button" href="{{ path('route_history', {incinerateurId: incinerateur.id }) }}">Historique des déclarations</a>
              </td>
            </tr>
            {% endfor %}
          </tbody>
      </table>
    </div>
  </section>
{% endblock %}