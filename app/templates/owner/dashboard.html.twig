    <div class="container">
      <h2>Dashboard</h2>

      {{ dump(dioxines) }}
      {{ dump(mainIncinerateur) }}
      <p>Bienvenue <strong>{{ app.user.username }} </strong></p>
        <ul>            
        {% for incinerateur in app.user.incinerateurs %}
            <li>
                <p><strong>{{ incinerateur.name }}</strong>, possède
