<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Aeris{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        <link rel="icon" type="image/png" href="/assets/images/favicons/android-chrome-192x192.png" />
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
      <div class="nav__container">
        <a class="nav__link" href="/">
          <img class="nav__logo" src="{{ asset('build/static/images/logo-betagouv.png') }}" alt="Accueil d'Aeris">
        </a><div class="logo-title">Aeris</div>

        <ul class="nav__links">
          <li><a href="{{ path('route_index')}}#aeris-what">C'est quoi ?</a></li>
          <li><a href="{{ path('route_index')}}#aeris-about">A propos</a></li>
          <li>
            {% if is_granted('ROLE_USER') %}
            <a href="{{ path('route_dashboard')}}"><button class="button">Accéder à mon espace</button></a>
            {% else %}
            <a href="{{ path('fos_user_security_login')}}"><button class="button">Accéder à mon espace</button></a>
            {% endif %}
          </li>
          
        </ul>
      </div>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        <script src="{{ asset('build/app.js') }}"></script>
    </body>
</html>