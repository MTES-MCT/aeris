{% extends "common/base_inside.html.twig" %}


{% block stylesheets %}
<style type="text/css">
table {
    border-collapse:collapse;
    width:100%;
}
.remarks {
    min-width: 20%;
}
th {
    background-color: #99ffff;
}
.subtitle {
    background-color: #dddddd;
    text-align: center;
}
.vle {
    background-color: #ffff99;
}
td, th {
    border:2px solid black;
    vertical-align:top;
}
h3 {
    background-color: #66ccff;
}
    </style>
{% endblock %}

{% block body %}
  <section class="section">
    <div class="container">


    <h2>Ligne 1</h2>
    <h3>Compteurs par paramètres suivis</h3>
    <table>
      <thead>
        <tr>
          <th>Référence AM 20/09/2002</th>
          <th>Critère</th>
          <th>Paramètres</th>
          {% for counter in counterList %}
          <th>{{counter}}</th>
          {% endfor %}
          <th class="remarks">Remarques</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td rowspan="2">Article 10</td>
          <td rowspan="2">Indisponibilité des dispositifs de traitements</td>
          <td>Durée cumulée de dépassement de la concentration moyenne 30 min (en h)</td>
          
          {% for counter in counterList %}
          <td>&nbsp;</td>
          {% endfor %}
          <td>&nbsp;</td>
        </tr>
        <tr>
          <td>Nombre de dépassements > 4h</td>
          
          {% for counter in counterList %}
          <td>&nbsp;</td>
          {% endfor %}
          <td>&nbsp;</td>
        </tr>


        <tr>
          <td rowspan="3">Article 18</td>
          <td>Concentration moyenne journalière</td>
          <td>Nombre de dépassements de la concentration moyenne journalière (j)</td>
          {% for counter in counterList %}
          <td>&nbsp;</td>
          {% endfor %}
          <td>&nbsp;</td>
        </tr>
        <tr>
          <td>Flux journalier</td>
          <td>Nombre de dépassements du flux journalier (j)</td>
          {% for counter in counterList %}
          <td>&nbsp;</td>
          {% endfor %}
          <td>&nbsp;</td>
        </tr>

        <tr>
          <td>Invalidation des moyennes</td>
          <td>Nombre de moyennes journalières invalides</td>
          {% for counter in counterList %}
          <td>&nbsp;</td>
          {% endfor %}
          <td>&nbsp;</td>
        </tr>
      </tbody>
    </table>
    <p><strong>Commentaires : </strong> </p>

    <h3>Températures T2S</h3>
    <table>
      <thead>
        <tr>
          <th>Four</th>
          <th colspan="2">F1</th>
          <th colspan="2">F2</th>
        </tr>
      </thead>
      <tbody>
        <tr class="subtitle">
          <td>&nbsp;</td>
          <td>T moyenne 30 minutes minimum</td>
          <td>T moyenne journalière</td>
          <td>T moyenne 30 minutes minimum</td>
          <td>T moyenne journalière</td>
          <td class="remarks" rowspan="2">Remarques</th>
        </tr>
        <tr class="subtitle">
          <td>Unité</td>
          <td colspan="2">°C</td>
          <td colspan="2">°C</td>
        </tr>
        {% for item in dateList %}
        <tr>
          <td>{{ item }}</td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          <td>lorem ipsum</td>
        </tr>
        {% endfor %}
        <tr class="vle">
          <td>VLE</td>
          <td>850</td>
          <td>850</td>
          <td>850</td>
          <td>850</td>
          <td>&nbsp;</td>
        </tr>
      </tbody>
    </table>
    <p><strong>Commentaires : </strong> </p>




    <h3>Concentrations</h3>
    <table>
      <thead>
        <tr>
          <th>Paramètres</th>
          {% for concentration in concentrationList %}
          <th colspan="2">{{concentration}}</th>
          {% endfor %}

        </tr>
      </thead>
      <tbody>
        <tr class="subtitle">
          <td>&nbsp;</td>

          {% for concentration in concentrationList %}
          <td>C moyenne journalière</td>
          <td>C 30 minutes max</td>
          {% endfor %}

          <td class="remarks" rowspan="2">Remarques</th>
        </tr>
        <tr class="subtitle">
          <td>Unité</td>
          {% for concentration in concentrationList %}
          <td colspan="2">mg/Nm<sup>3</sup></td>
          {% endfor %}
        </tr>
        {% for item in dateList %}
        <tr>
          <td>{{ item }}</td>
          {% for concentration in concentrationList %}
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          {% endfor %}
          <td>lorem ipsum</td>
        </tr>
        {% endfor %}
        <tr class="vle">
          <td>VLE</td>
          <td>&nbsp;</td>
          {% for concentration in concentrationList %}
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          {% endfor %}
        </tr>
      </tbody>
    </table>
    <p><strong>Commentaires : </strong> </p>




    <h3>Flux</h3>
    <table>
      <thead>
        <tr>
          <th>Paramètres</th>
          <th>Débit des fumées</th>
          {% for criterion in fluxCriterions %}
          <th colspan="2">{{criterion}}</th>
          {% endfor %}
          
        </tr>
      </thead>
      <tbody>
        <tr class="subtitle">
          <td>&nbsp;</td>
          <td>Débit journalier converti en débit horaire moyen</td>
          {% for criterion in fluxCriterions %}
          <td>F journalier</td>
          <td>F horaire max</td>
          {% endfor %}
          <td class="remarks" rowspan="2">Remarques</th>
        </tr>
        <tr class="subtitle">
          <td>Unité</td>
          <td>Nm<sup>3</sup>/h</td>
          {% for criterion in fluxCriterions %}
          <td>kg/j</td>
          <td>kg/h</td>
          {% endfor %}
          
        </tr>
        {% for item in dateList %}
        <tr>
          <td>{{item}}</td>
          <td>&nbsp;</td>
          {% for criterion in fluxCriterions %}
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          {% endfor %}
          <td>lorem ipsum</td>
        </tr>
        {% endfor %}
        <tr class="vle">
          <td>VLE</td>
          <td>&nbsp;</td>
          {% for criterion in fluxCriterions %}
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          {% endfor %}
        </tr>
      </tbody>
    </table>
    <p><strong>Commentaires : </strong> </p>

    </div>
  </section>
{% endblock %}